{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "./build/",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
